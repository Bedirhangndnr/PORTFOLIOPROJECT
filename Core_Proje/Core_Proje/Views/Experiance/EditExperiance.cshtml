@model EntityLayer.Concrete.Experiance

@{
    ViewData["Title"] = "EditExperiance";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}




@using (Html.BeginForm("EditExperiance", "Experiance", FormMethod.Post))
{

    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Deneyim Düzenleme Paneli</h4>
                <form class="forms-sample">
                    <div class="form-group">
                        <label>ID</label>
                        @Html.TextBoxFor(X => X.ExperianceID, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Ad</label>
                        @Html.TextBoxFor(X => X.Name, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Tarih</label>
                        @Html.TextBoxFor(X => X.Date, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Görsel Url</label>
                        @Html.TextBoxFor(X => X.ImageUrl, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Açıklama</label>
                        @Html.TextBoxFor(X => X.Description, new { @class = "form-control" })
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                    <button class="btn btn-dark">İptal</button>
                </form>
            </div>
        </div>
    </div>
};