@model EntityLayer.Concrete.Skill
@{
    ViewData["Title"] = "AddSkill";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
<form class="form-group" method="post">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yetenek Ekleme Paneli</h4>
                <form class="forms-sample" method="post">
                    <div class="form-group">
                        <label>Başlık</label>
                        @Html.TextAreaFor(x=>x.Title, new {@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label>Değer</label>
                        @Html.TextAreaFor(x => x.Value, new { @class = "form-control" })
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                    <button class="btn btn-dark">İptal</button>
                </form>
            </div>
        </div>
    </div>
</form>