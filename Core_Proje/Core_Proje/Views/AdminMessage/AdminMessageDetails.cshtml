

@model EntityLayer.Concrete.WriterMessage
@{
    ViewData["Title"] = "AdminMessageDetails";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Mesaj Detay Sayfası</h4>
            <form class="forms-sample">
                <div class="form-group">
                    <label>ID</label>
                    @Html.TextBoxFor(X => X.WriterMessageID, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Konu</label>
                    @Html.TextBoxFor(X => X.Subject, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Gönderen</label>
                    @Html.TextBoxFor(X => X.SenderName, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Alıcı</label>
                    @Html.TextBoxFor(X => X.ReceiverName, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Tarih</label>
                    @Html.TextBoxFor(X => X.Date, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>İçerik</label>
                    @Html.TextBoxFor(X => X.MessageContent, new { @class = "form-control" })
                </div>
                    <br />
                    <a asp-action="ReceiverMessageList" class="btn btn-primary mr-2">Admin Gelen Mesajlar</a>
                    <a asp-action="SenderMessageList" class="btn btn-warning mr-2">Admin Giden Mesajlar</a>
            </form>
        </div>
    </div>
</div>
